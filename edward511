pipeline {
    agent any
    environment {
        DOCKER_HUB_CREDENTIALS = 'dockerhub-repo'
        IMAGE_NAME = 'edwardsamson/nvit-game'
        REPO_URL = ''https://github.com/edward511/nvit-game.git
    }
    stages {
        stage('Git Checkout') {
            steps {
                dir('nvit-gameapp') {
                    git url: REPO_URL, branch: 'main'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    dir('nvit-gameapp') {
                        sh 'docker build -t ${IMAGE_NAME} -f Dockerfile .'
                    }
                }
            }
        }
        stage('Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-repo', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker push ${IMAGE_NAME}'
                }
            }
        }
    }
}
